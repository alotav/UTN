<div class="container-fluid"> 
    <div class="row justify-content-center align-items-center colores" style="height: 100vh;">
        <div class="col-7">
            <div class="d-flex justify-content-center">
                <h4 style="color: #9398A6">Agregar Productos</h4>
            </div>
            <div class="colores d-flex justify-content-center align-items-center">
                <form method="post" action="/admin/productos/create" class=" mb-3 w-50" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" class="form-control mt-4" name="nombre" placeholder="Ingrese nombre del producto">
                    </div>
                    {{!-- <div class="form-group">
                        <input type="number" class="form-control mt-4" name="id_categoria" placeholder="Ingrese id_categoria">
                    </div> --}}
                    
                    <select name="id_categoria" id="id_categoria" class="form-select mt-4">
                        <option disabled selected>Selecciona una Categoria</option>
                        {{#each categoria}}
                        <option value="{{id}}">{{nombre}}</option>
                        {{/each}}
                    </select>

                   <div class="form-group">
                        <input type="number" class="form-control mt-4" name="precio" placeholder="Ingrese el precio">
                    </div>
                    <div class="form-group">
                        <input type="file" class="form-control mt-4" name="imagen" placeholder="Seleccione una Imagen">
                    </div>
                    <button type="submit" class="btn btn-info mt-4">Agregar</button>
                </form>
            </div>
                

        </div>
    </div>
</div>